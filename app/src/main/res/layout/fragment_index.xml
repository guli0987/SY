<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.youth.banner.Banner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="80dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
    </com.youth.banner.Banner>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    <LinearLayout
        android:id="@+id/L1"
        android:layout_weight="1"
        android:layout_marginLeft="30dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/image_sw"
            android:layout_width="24dip"
            android:layout_height="24dip"
            android:src="@drawable/xw" />

        <TextView
            android:id="@+id/tv_sw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dip"
            android:text="食物"
            android:textSize="11sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/L2"
        android:layout_weight="1"
        android:layout_marginLeft="5dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/image_yl"
            android:layout_width="24dip"
            android:layout_height="24dip"
            android:src="@drawable/xw" />

        <TextView
            android:id="@+id/tv_yl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dip"
            android:text="饮料"
            android:textSize="11sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/L3"
        android:layout_weight="1"
        android:layout_marginLeft="5dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/image_sg"
            android:layout_width="24dip"
            android:layout_height="24dip"
            android:src="@drawable/xw" />

        <TextView
            android:id="@+id/tv_sg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dip"
            android:text="水果"
            android:textSize="11sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/L4"
        android:layout_weight="1"
        android:layout_marginLeft="5dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/image_kq"
            android:layout_width="24dip"
            android:layout_height="24dip"
            android:src="@drawable/xw" />

        <TextView
            android:id="@+id/tv_kq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dip"
            android:text="卡券"
            android:textSize="11sp" />
    </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        >
    <TextView
        android:id="@+id/tv_announce"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="公告"
        />
    <TextView
        android:id="@+id/tv_announce_content"
        android:layout_width="0dp"
        android:layout_weight="6"
        android:layout_height="wrap_content"
        android:text="下面播放一条公告"
            />
    <TextView
        android:id="@+id/tv_announce_all"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textColor="@color/blue"
        android:text=">>"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    <TextView
        android:id="@+id/tv_recommend"
        android:layout_width="0dp"
        android:layout_weight="6"
        android:layout_height="wrap_content"
        android:text="推荐"
            />

        <androidx.appcompat.widget.SearchView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>